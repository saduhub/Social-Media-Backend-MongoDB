<section class="home-section">
    <h1>Social Media Admin</h1>
    {{#if isHomePage}}
    <p>Welcome to the Social Media Admin Panel. Here you can manage users, thoughts, and more.</p>
    {{/if}}

    {{#if showPayload}}
    <div id="payload">
        <h2>Payload</h2>
        {{!-- Delete User Form --}}
        {{#if deleteUserAction}}
            {{> deleteUserForm }}
        {{/if}}
        {{!-- Delete Thought Form --}}
        {{#if deleteThoughtAction}}
            {{> deleteThoughtForm }}
        {{/if}}
        {{!-- Remove Friend Form --}}
        {{#if removeFriendAction}}
            {{> removeFriendForm }}
        {{/if}}
        {{!-- Delete Reaction --}}
        {{#if deleteReactionAction}}
            {{> deleteReactionForm }}
        {{/if}}
    </div>
    {{/if}}
    {{#if showDisplay}}
    <div id="display">
        <h2>Display</h2>
        <pre class="bg-light p-3 border rounded overflow-auto">
            {{#if showThoughts}}
            <code>{{json thoughts }}</code>
            {{/if}}
            {{#if showUsers}}
            <code>{{json users }}</code>
            {{/if}}
        </pre>
    </div>
    {{/if}}
</section>
