{{!-- Form --}}
<form id="remove-friend-form" class="container">
    {{!-- Input --}}
    <div class="mb-3">
        <label for="username" class="form-label">Username of user that needs friend removed:</label>
        <input type="text" class="form-control" id="username">
    </div>
    {{!-- Input --}}
    <div class="mb-3">
        <label for="remove-friend" class="form-label">ID of friend to be removed:</label>
        <input type="text" class="form-control" id="remove-friend">
    </div>
    {{!-- Button --}}
    <button type="submit" class="btn btn-danger">Remove Friend</button>
</form>