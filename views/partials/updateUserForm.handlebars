<form id="update-user-form" class="container">
    <div class="mb-3">
        <label for="username" class="form-label">Username of user that wants their info updated:</label>
        <input type="text" class="form-control" id="username">
    </div>
    <div class="mb-3">
        <label for="new-username" class="form-label">New Username:</label>
        <input type="text" class="form-control" id="new-username">
    </div>
    <div class="mb-3">
        <label for="new-email" class="form-label">New Email:</label>
        <input type="text" class="form-control" id="new-email">
    </div>
    <button type="submit" class="btn btn-danger">Update User</button>
</form>